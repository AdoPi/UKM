#telechargement
#wget ou curl
#convertion iso en img
#choix de la cible ISO ( possible de pas telecharger depuis l'app

#iso path
path_iso=$1

while  ! [ -f $path_iso  ]
do
	read -p "Iso file:" path_iso
done
echo "Ubuntu Key Maker"
echo "Where do you want install the distribution?"

list=$(diskutil list | grep '/')
for disk_path in $list
do
	echo $disk_path
done

read -p ": disk" disk
disk='disk'$disk

check_disk=0
list=$(echo $list | sed 's/\/dev\///g')

for i in $list 
do
	if [ $i = $disk ] 
		then
		check_disk=1
	fi
done

if [ $check_disk -eq 1 ]
	then
	echo $disk
else
	echo "ERROR in disk_name"
fi





